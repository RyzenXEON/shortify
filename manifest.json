{
  "manifest_version": 3,
  "name": "Short-IT",
  "version": "1.0",
  "description": "Create short links using thexeon.tech",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://thexeon.tech/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}